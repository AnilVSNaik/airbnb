<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Amenities</th>
      <th>House rules</th>
      <th>Reviews</th>
      <th>Price</th>
      <th>Host</th>
      <th>Location</th>
      <th>Similar listings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.desc %></td>
        <td><%= post.amenities %></td>
        <td><%= post.house_rules %></td>
        <td><%= post.reviews %></td>
        <td><%= post.price %></td>
        <td><%= post.host %></td>
        <td><%= post.location %></td>
        <td><%= post.similar_listings %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
