<% if signed_in? %>
<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Place Type</th>
      <th>Property Type</th>
      <th>Room Number</th>
      <th>Price</th>
      <th>Bed Number</th>
      <th>Guest Number</th>
      <th>Country</th>
      <th>State</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Street Address</th>\
      <th>Verified</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.desc %></td>
        <td><%= listing.place_type %></td>
        <td><%= listing.property_type %></td>
        <td><%= listing.room_number %></td>
        <td><%= listing.price %></td>
        <td><%= listing.bed_number %></td>
        <td><%= listing.guest_number %></td>
        <td><%= listing.country %></td>
        <td><%= listing.state %></td>
        <td><%= listing.city %></td>
        <td><%= listing.zipcode %></td>
        <td><%= listing.street_address %></td>
        <td><%= listing.verified%></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <% if current_user.customer? %>
        <% else %>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>
<% else %>
<script type="text/javascript">
  window.location = "/";
</script>
<% end %>